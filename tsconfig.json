{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2019"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "./setupTests.ts",
    "tests/**/*.ts",
    "src/**/*.test.ts",
    "__test_mocs__/*.ts"
  ],
  "files": [
    "global.d.ts"
  ]
}
