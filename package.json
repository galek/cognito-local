{
  "name": "cognito-local",
  "version": "1.0.0",
  "license": "MIT",
  "bin": "dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "build": "tsc --p tsconfig.build.json",
    "integration-test": "jest --config integration-tests/jest.config.js",
    "integration-test:watch": "jest --config integration-tests/jest.config.js --watch",
    "lint": "eslint \"{src}/**/*.ts\"",
    "lint:fix": "eslint \"{src}/**/*.ts\" --fix",
    "start": "ts-node src",
    "start:dev": "cross-env COGNITO_LOCAL_DEVMODE=1 ts-node src",
    "start:prod": "node dist/index.js",
    "start:debug": "cross-env COGNITO_LOCAL_DEVMODE=1 DEBUG=1 node -r ts-node/register --inspect=9230 --enable-source-maps src",
    "start:watch": "nodemon",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/preset-typescript": "7.18.6",
    "@types/aws-lambda": "8.10.109",
    "@types/body-parser": "1.19.2",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.15",
    "@types/jest": "29.2.6",
    "@types/jsonwebtoken": "9.0.1",
    "@types/lodash.mergewith": "4.6.7",
    "@types/node": "18.11.18",
    "@types/supertest": "2.0.12",
    "@types/uuid": "9.0.0",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "jest": "29.3.1",
    "nodemon": "2.0.20",
    "prettier": "2.8.3",
    "rimraf": "4.1.1",
    "supertest": "6.3.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "@aws-crypto/client-node": "3.1.1",
    "aws-lambda": "1.0.7",
    "aws-sdk": "2.1299.0",
    "body-parser": "1.20.1",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "jsonwebtoken": "9.0.0",
    "lodash.mergewith": "4.6.2",
    "pino": "8.8.0",
    "pino-http": "8.3.1",
    "pino-pretty": "9.1.1",
    "short-uuid": "4.2.2",
    "stormdb": "0.6.0",
    "uuid": "9.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "npm run start"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --cache",
      "tsc --target es2021 --moduleResolution node --esModuleInterop --resolveJsonModule --noEmit ./setupTests.ts",
      "prettier --write"
    ],
    "README.md": "markdown-toc -i --bullets=- --maxdepth=3"
  },
  "engines": {
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jagregory/cognito-local.git"
  }
}
