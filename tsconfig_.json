{
  "compilerOptions": {
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  }
}
